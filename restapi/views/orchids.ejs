<!-- views/orchids.ejs -->
<html>

<head>
  <title>Orchids List</title>
  <style>
    .container{
   display: inline-flex;
   align-items: center;
   
    }
    .orchid-card {
      border: 1px solid #ddd;
      padding: 10px;
      margin: 10px;
      width: 300px;
      text-align: center;
      
    }
    .orchid-image {
      max-width: 100%;
      max-height: 200px;
      margin-bottom: 10px;
      
    }
  </style>
</head>

<body>
  <h1>Orchids List</h1>

  <% orchids.forEach((orchid)=> { %>
    <div class="container">
      <div>
    <div class="orchid-card">
      <strong>
        <%= orchid.name %>
      </strong>
      <img class="orchid-image" src="<%= orchid.image %>" alt="<%= orchid.name %> Image">
      <p>Price: <%= orchid.price %>
      </p>
      <p>Color: <%= orchid.color %>
      </p>
      <p>Original: <%= orchid.original %>
      </p>
    </div>
  </div>
    <% }); %>
</body>

</html>